            <TableColumn fx:id="tcSujet" prefWidth="75.0" text="sujet" />
            <TableColumn fx:id="tcContent" prefWidth="192.0" text="content" />
            <TableColumn fx:id="tcNom" prefWidth="68.0" text="nom" />
            <TableColumn fx:id="tcEmail" prefWidth="73.0" text="email" />
            <TableColumn fx:id="tcStatus" prefWidth="81.0" text="statut" />
         </columns>
      </TableView>
      <Button fx:id="btnUpdaterec" layoutX="68.0" layoutY="355.0" mnemonicParsing="false" onAction="#modifierReclamation" text="Update" />
      <Button fx:id="btnDeleterec" layoutX="156.0" layoutY="355.0" mnemonicParsing="false" onAction="#supprimerReclamation" text="Delete" />
      <Button fx:id="btnRetour" layoutX="758.0" layoutY="22.0" mnemonicParsing="false" onAction="#Retour" text="Retour" />
   </children>
</AnchorPane>

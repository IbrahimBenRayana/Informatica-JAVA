<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="850.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="edu.Clutchers.GUI.GestionReclamationController">
   <children>
      <Label layoutX="52.0" layoutY="34.0" text="Gestion Reclamation">
         <font>
            <Font name="Arial Bold Italic" size="14.0" />
         </font>
      </Label>
      <VBox layoutX="42.0" layoutY="97.0" prefHeight="210.0" prefWidth="51.0" spacing="30.0">
         <children>
            <Label text="Sujet" />
            <Label text="Content" />
            <Label text="Nom" />
            <Label text="Email" />
            <Label text="Statut" />
         </children>
      </VBox>
      <VBox layoutX="108.0" layoutY="102.0" prefHeight="200.0" prefWidth="128.0" spacing="12.0">
         <children>
            <TextField fx:id="tfSujet" editable="false" />
            <TextArea fx:id="tfContent" editable="false" prefHeight="200.0" prefWidth="200.0" />
            <TextField fx:id="tfNom" editable="false" />
            <TextField fx:id="tfEmail" editable="false" />
            <TextField fx:id="tfStatut" editable="false" />
         </children>
      </VBox>
      <TableView id="Reclamation" fx:id="tableview" layoutX="268.0" layoutY="75.0" onMouseClicked="#affInInputsRec" prefHeight="324.0" prefWidth="490.0">
